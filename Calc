using System;
using System.Collections.Generic;

namespace VCode
{
    class Program
    {
        static void Main(string[] args)
        {
            
            Console.Title = "Calculator"; //Title of the program
            
            for (int i = 0; i < 1; i++)
            {

            Console.ForegroundColor = ConsoleColor.Gray;
            
            Console.WriteLine("Please input a number:        ");
            double a = Convert.ToDouble(Console.ReadLine());


            Console.WriteLine("Please input a second number: ");
            double b = Convert.ToDouble(Console.ReadLine());

            Console.WriteLine("\nPlease input the operation you want to make (it can be '+', '-', '*', '/', '%1' or '%2')\n\n('%1' will show what % is a number out of a number. '%2' will show you how much is the percentage of a number)\nType in 'examples' if you did not understand this description.\n");
            string c = Convert.ToString(Console.ReadLine());

            if (c == "examples")
            {
              Console.Write("\nExample of %1: \n\nIf the first input is 25 and the second input is 50, the result will be ");
              Console.ForegroundColor = ConsoleColor.Green;
              Console.Write("50%");
              Console.ForegroundColor = ConsoleColor.Gray;
              Console.Write(" since 25 is the 50% of 50");

              Console.Write("\nExample of %2: \n\nIf the first input is 50 and the second input is 50, the result will be ");
              Console.ForegroundColor = ConsoleColor.Green;
              Console.Write("25");
              Console.ForegroundColor = ConsoleColor.Gray;
              Console.WriteLine(" since the 50% of 50 is 25\n\n");
            
              Console.WriteLine("\nNow please input the operation you want to make ('+', '-', '*', '/', '%1' or '%2'):");
              c = Console.ReadLine();
            }
            
            
             Console.ForegroundColor = ConsoleColor.Green;

           switch (c)
           {
              case "+":
              Console.Write("\nThe result is: ");
              Console.WriteLine(a + b + "\n\n");
              break;

              case "-":
              Console.Write("\nThe result is: ");
              Console.WriteLine(a - b + "\n\n");
              break;

              case "*":
              Console.Write("\nThe result is: ");
              Console.WriteLine(a * b + "\n\n");
              break;

              case "/":
              Console.Write("\nThe result is: ");
              Console.WriteLine(a / b + "\n\n");
              break;

              case "%1":
              Console.Write("\nThe result is: ");
              Console.WriteLine((a / b) * 100 + "%\n\n");
              break;

              case "%2":
              Console.Write("\nThe result is: ");
              Console.WriteLine(b * a/100);
              break;

              default:
              Console.ForegroundColor = ConsoleColor.Red;
              Console.WriteLine("\nSomething went wrong with the third input. Please make sure it's '+', '-', '*', '/' or '%'.\n\n");
              break;

           }

           Console.ForegroundColor = ConsoleColor.Gray;
           
           Console.Write("Do you want to exit?\ny/n: ");
           string d = Console.ReadLine();
            
           if (d == "y")
           {
               
           }  else
           {
               i--;
               Console.Write("\n\n");
           } 


           }           
        }     
    }
}
